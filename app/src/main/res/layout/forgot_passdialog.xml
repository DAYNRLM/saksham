<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:background="@drawable/border_of_button">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/otp_creation"
        android:textColor="@color/colorTextBlack"
        android:textSize="@dimen/dimen_20"
        android:layout_gravity="center"
        android:textStyle="bold" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space5dp"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15"
        android:background="@drawable/border_of_button"
        android:hint="@string/enter_mobile">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mobileNoET"
            android:layout_margin="@dimen/space5dp"
            android:lines="1"
            android:maxLength="10"
            android:textColor="@color/colorTextBlack"
            android:textColorHint="@color/colorHintDark"
            android:textSize="@dimen/textSize18"
            android:inputType="number"/>

    </com.google.android.material.textfield.TextInputLayout>



                <Button
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
android:layout_marginTop="@dimen/dimen_15"
                    android:text="@string/send_otp"
                    android:textColor="@color/colorTextButton"
                    android:background="@drawable/round_shape_dashboard"
                    android:id="@+id/send_otpBTN"
                    />



</LinearLayout>