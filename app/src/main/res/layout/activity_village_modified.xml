<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorScreenBackGround"
    android:orientation="vertical"
    tools:context=".presenter.Activities.VillageModifiedActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTitleBackground"
        android:textColor="@color/colorTitleText"
        android:gravity="center_horizontal"
        android:textSize="@dimen/textSize18"
        android:layout_margin="@dimen/dimen_10"
        android:text="Please Sync All details "/>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="@dimen/space10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_5"
            android:background="@color/colorLightHighlight"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unsync_details"
                android:textColor="@color/colorTextBlack" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="@dimen/dimen_2"
                android:background="@color/colorTextBlack" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/dimen_5"
                android:background="@color/colorViewLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:text="@string/unsync_baseline"
                    android:textColor="@color/colorTextBlack" />

                <TextView
                    android:id="@+id/unsynced_baselineTVW"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_weight="1.4"
                    android:text="unsynced baseline data" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/dimen_5"
                android:background="@color/colorViewLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:layout_weight=".6"
                    android:text="@string/unsync_training"
                    android:textColor="@color/colorTextBlack" />

                <TextView
                    android:id="@+id/unsynced_trainingTVW"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:text="unsynced baseline data" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/dimen_5"
                android:background="@color/colorViewLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:layout_weight=".6"
                    android:text="@string/unsync_evaluation"
                    android:textColor="@color/colorTextBlack" />

                <TextView
                    android:id="@+id/unsynced_evaluationTVW"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:text="unsynced baseline data" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/dimen_5"
                android:background="@color/colorViewLine" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/villageModifiedSync_BTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBoxLight"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"
        android:padding="@dimen/dimen_5"
        android:layout_margin="@dimen/dimen_10"
        android:textColor="@color/colorTextButton"
        android:text="Sync And Logout"/>

</LinearLayout>