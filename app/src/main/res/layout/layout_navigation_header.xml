<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"

    android:orientation="vertical">
     <ImageView
         android:id="@+id/ivHeaderBackground"
         android:layout_width="@dimen/dimen_100"
android:layout_marginTop="@dimen/dimen_5"
         android:layout_marginLeft="@dimen/dimen_1"
         android:layout_height="@dimen/dimen_100"
         android:scaleType="centerCrop"
         android:src="@drawable/drawer_hadder_logo" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_toRightOf="@id/ivHeaderBackground"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvUserName"
            style="@style/tv_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:filterTouchesWhenObscured="true"
            android:gravity="start"
            android:text="Name hiiii"
            android:textColor="@color/colorTextBlack"
            android:textSize="@dimen/textSize18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUserMobileNumber"
            style="@style/tv_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:filterTouchesWhenObscured="true"
            android:gravity="start"
            android:textColor="@color/colorTextBlack"
            android:text="9812343583"
            android:textSize="@dimen/textSize18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAppVersion"
            style="@style/tv_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:filterTouchesWhenObscured="true"
            android:textColor="@color/colorTextBlack"
            android:gravity="start"
            android:text="version1.0.0"
            android:textSize="@dimen/textSize15"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>