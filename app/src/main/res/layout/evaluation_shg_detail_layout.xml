<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:background="@drawable/border_of_button"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/colorLightHighlight"
        android:clickable="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/shgLocation_Tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Blockcoe>>Gpcode>>villageCode"
            android:textSize="@dimen/textSize16"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dimen_5"
            android:background="@color/colorViewLine" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pending_shgs"
                android:visibility="gone"
                android:textSize="@dimen/textSize18"
                android:id="@+id/showPendingEvaluationDataNum"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical"
                android:id="@+id/showPendingEvaluationDataLL">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            android:weightSum="3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/basline_shg_name"
                android:layout_weight="0.7"
                android:layout_marginLeft="@dimen/dimen_5"
                android:textStyle="bold"
                android:gravity="left"/>

            <TextView
                android:id="@+id/childevaluationTypeTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Evaluation"
                android:layout_weight="1.1"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/evaluation_days_left"
                android:layout_weight="1.2"
                android:textStyle="bold"
                android:gravity="center_horizontal"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/location_ShgDetailRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_5"
            android:layout_marginBottom="@dimen/dimen_10"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>