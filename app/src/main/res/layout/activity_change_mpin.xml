<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presenter.Activities.ChangeMpinActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorAppName"
            android:text="@string/app_name"
            android:textSize="@dimen/dimen_50"
            android:layout_marginTop="@dimen/dimen_10"
            android:gravity="center"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space5dp"
            android:layout_marginTop="@dimen/dimen_30"
            android:hint="@string/user_id">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/id_fgd"
                android:layout_margin="@dimen/space5dp"
                android:lines="1"
                android:maxLength="15"
                android:textColor="@color/colorTextBlack"
                android:textColorHint="@color/colorHintDark"
                android:textSize="@dimen/textSize18"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space5dp"
            android:padding="@dimen/space5dp"
            app:passwordToggleEnabled="true"
            android:hint="@string/user_password">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/passwd_fgd"
                android:layout_margin="@dimen/space5dp"
                android:lines="1"
                android:maxLength="15"
                android:textColor="@color/colorTextBlack"
                android:textColorHint="@color/colorHintDark"
                android:textSize="@dimen/textSize18"
                android:inputType="textPassword"/>

        </com.google.android.material.textfield.TextInputLayout>

                <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/submit_fgd"
                    android:layout_marginTop="@dimen/dimen_10"
                android:text="@string/submit"
                android:layout_margin="@dimen/dimen_2"
                android:padding="@dimen/space5dp"
                android:textColor="@color/colorTextButton"
                android:background="@drawable/round_shape_dashboard"/>



    </LinearLayout>


</LinearLayout>