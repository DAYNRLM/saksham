<?xml version="1.0" encoding="utf-8"?>
<com.github.captain_miao.optroundcardview.OptRoundCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/colorScreenBackGround"
        android:id="@+id/topRelativLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/evaluation_Question_Title1"
            android:textColor="@color/colorAppName"
            android:id="@+id/titleTV"
            android:padding="@dimen/dimen_2"
            android:textStyle="bold" />

        <View
            android:id="@+id/view_seperator"
            android:layout_width="@dimen/dimen_150"
            android:layout_height="2dp"
            android:layout_below="@+id/titleTV"
            android:layout_marginTop="@dimen/space2dp"
            android:layout_marginBottom="@dimen/space2dp"
            android:background="@color/colorViewLine" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/childQuestionRV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_seperator"
            android:layout_marginTop="@dimen/dimen_10"
            android:padding="@dimen/dimen_2"/>
    </RelativeLayout>

</com.github.captain_miao.optroundcardview.OptRoundCardView>