<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorScreenBackGround"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/space10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:text="@string/unsync_details"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                   style="@style/NormalTextView" />




                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:background="@color/colorViewLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:text="@string/unsync_baseline"
                      style="@style/NormalTextView" />

                    <TextView
                        android:id="@+id/unsynced_baselineTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:layout_weight="1.2"
                        android:text="unsynced baseline data" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:background="@color/colorViewLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_5"
                        android:layout_weight=".8"
                        android:text="@string/unsync_training"
                       style="@style/NormalTextView" />

                    <TextView
                        android:id="@+id/unsynced_trainingTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="unsynced baseline data" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:background="@color/colorViewLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_5"
                        android:layout_weight=".8"
                        android:text="@string/unsync_evaluation"

                        style="@style/NormalTextView"
                        />

                    <TextView
                        android:id="@+id/unsynced_evaluationTV"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="unsynced baseline data" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:background="@color/colorViewLine" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sync_dataTV"
                    android:layout_margin="@dimen/dimen_10"
                    android:layout_gravity="center"
                    android:text="@string/sync_data"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/round_shape_dashboard"
                    android:textSize="@dimen/dimen_25" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/space10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/data_info"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    style="@style/NormalTextView" />




                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:background="@color/colorViewLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:text="@string/data_infoB"
                        style="@style/NormalTextView" />

                    <TextView
                        android:id="@+id/baslineDone_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:layout_weight="1.2"
                        android:text="unsynced baseline data"
                        style="@style/NormalTextView"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:background="@color/colorViewLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_5"
                        android:layout_weight=".8"
                        android:text="@string/data_infoT"
                        style="@style/NormalTextView" />

                    <TextView
                        android:id="@+id/trainingDoneTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="unsynced baseline data"
                        style="@style/NormalTextView"
                        />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:background="@color/colorViewLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_5"
                        android:layout_weight=".8"
                        android:text="@string/data_infoE"
                       style="@style/NormalTextView" />

                    <TextView
                        android:id="@+id/evaluationDone_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:text="unsynced baseline data"
                       style="@style/NormalTextView"
                        />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>




        <LinearLayout
            android:id="@+id/trainingPendingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:background="@color/colorLightHighlight"
            android:orientation="vertical"

            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_marginLeft="@dimen/dimen_5"
                android:text="@string/pending_evaluation" />

            <TextView
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_width="175dp"
                android:layout_height="@dimen/dimen_2"
                android:background="@color/colorBoxDark" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/dimen_5"
                android:background="@color/colorViewLine" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/dimen_5"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="@string/dashboard_shg_left" />

                <TextView
                    android:id="@+id/dash_pendingEvaluatingShgTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:gravity="center_horizontal"
                    android:text="500" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/dimen_5"
                android:background="@color/colorViewLine" />

            <TextView
                android:id="@+id/dashboard_showDetailtv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimen_10"
                android:background="@drawable/shape_single_rounded"
                android:gravity="center"
                android:text="@string/dashboard_show_detail"
                android:textColor="@color/colorTextButton"
                android:textSize="@dimen/dimen_25" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notificationLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLightHighlight"
            android:layout_marginTop="@dimen/dimen_10"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/dashboard_shg_msg"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/notification_rv"
                android:layout_width="match_parent"
                android:background="@drawable/border_of_button"
                android:layout_height="@dimen/dimen_150"
                android:padding="@dimen/dimen_5"
                android:layout_margin="@dimen/dimen_10"/>

        </LinearLayout>


        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dimen_20"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_margin="@dimen/dimen_5">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnBaseline"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal">
                    <TextView
                       android:background="@drawable/step_bg"
                        android:layout_width="wrap_content"
                        style="@style/TextViewCommonTheam"
                        android:text="1"
                        android:gravity="center"
                        android:layout_gravity="left"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="80dp"
                        android:src="@drawable/baseline_img"
                        android:layout_gravity="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextViewCommonTheam"
                        android:text="@string/baseline" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnAddTraining"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal">
                    <TextView

                        android:background="@drawable/step_bg"
                        android:layout_width="wrap_content"
                        style="@style/TextViewCommonTheam"
                        android:text="2"
                        android:gravity="center"
                        android:layout_gravity="left"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="80dp"
                        android:src="@drawable/training_img"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/module_add_Training"
                        style="@style/TextViewCommonTheam"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnEvaluation"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal">
                    <TextView

                        android:background="@drawable/step_bg"
                        android:layout_width="wrap_content"
                        style="@style/TextViewCommonTheam"
                        android:text="3"
                        android:gravity="center"
                        android:layout_gravity="left"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="80dp"
                        android:src="@drawable/evalution_img" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/module_Evaluation3"
                        style="@style/TextViewCommonTheam"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnReports"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="fill"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal">
                    <TextView

                        android:background="@drawable/step_bg"
                        android:layout_width="wrap_content"
                        style="@style/TextViewCommonTheam"
                        android:text="4"
                        android:gravity="center"
                        android:layout_gravity="left"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="80dp"
                        android:src="@drawable/report_img" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/module_Report"
                        style="@style/TextViewCommonTheam"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </GridLayout>





