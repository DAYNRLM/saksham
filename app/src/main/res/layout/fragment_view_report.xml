<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorScreenBackGround"
    tools:context=".presenter.Fragments.ViewReport">

    <RelativeLayout
        android:id="@+id/topRL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/topLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <!--  <TextView
                  android:layout_width="@dimen/dimen_300"
                  android:layout_height="wrap_content"
                  android:textColor="@color/colorTitle"
                  android:textSize="@dimen/dimen_25"
                  android:text="@string/viewReportLabel"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:layout_marginTop="@dimen/dimen_5"
                  android:background="@color/colorTitleBackground"
                  />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_50"
                android:layout_marginTop="@dimen/dimen_10"
                android:orientation="horizontal"
                android:weightSum="2">


                <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:id="@+id/select_monthMBS"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_marginRight="@dimen/dimen_15"
                    android:layout_weight="1"
                    android:popupTheme="@color/colorLightHighlight"
                    android:text="@string/selectMonth"
                    android:textColor="@color/colorTextBlack" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/noDataFoundLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/goto_homeLL"
            android:layout_below="@+id/topLL"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginBottom="@dimen/dimen_5"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/report_listRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/nodata_found"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/select_month"
                android:textColor="@color/colorTextBlack"
                android:textSize="@dimen/dimen_30"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/goto_homeLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorScreenBackGround"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30"
                android:background="@color/colorBoxLight"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_weight=".6"
                    android:paddingTop="@dimen/dimen_5"
                    android:text="@string/total"
                    android:textColor="@color/colorTextButton"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/no_of_shg_participatedTV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:gravity="center"
                    android:text="xxx"
                    android:textColor="@color/colorTextButton" />

                <TextView
                    android:id="@+id/no_of_shg_member_participatedTV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="xxx"
                    android:textColor="@color/colorTextButton" />

                <TextView
                    android:id="@+id/other_member_participatedTV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.6"
                    android:gravity="center"
                    android:text="xxx"
                    android:textColor="@color/colorTextButton" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/no_of_daysLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/totalLL"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:paddingLeft="@dimen/dimen_5"
                    android:text="@string/noofDays"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/dimen_15" />

                <TextView
                    android:id="@+id/no_of_daysTV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/dimen_15" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/no_of_shgsLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/no_of_daysLL"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:paddingLeft="@dimen/dimen_5"
                    android:text="@string/noofShgs"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/dimen_15" />

                <TextView
                    android:id="@+id/no_of_shgsTV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/dimen_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/totalLL"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:paddingLeft="@dimen/dimen_5"
                    android:text="@string/noofshgsbaselinedone"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/dimen_15" />

                <TextView
                    android:id="@+id/baseline_doneTV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/dimen_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/totalLL"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:paddingLeft="@dimen/dimen_5"
                    android:text="@string/noofshgsassesmentdone"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/dimen_15" />

                <TextView
                    android:id="@+id/assesment_doneTV"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="@dimen/dimen_15" />
            </LinearLayout>



                <Button
                    android:id="@+id/goto_homeBTN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_2"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_marginRight="@dimen/dimen_5"
                    android:background="@drawable/round_shape_dashboard"
                    android:text="@string/gotoHome"
                    android:textColor="@color/colorTextButton"
                    android:textSize="@dimen/dimen_10" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>