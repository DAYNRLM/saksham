<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorScreenBackGround"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/topRelativeLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space10dp"
                android:text="@string/app_name"
                android:textColor="@color/colorTitle"
                android:textSize="@dimen/text_size_big" />-->

            <TextView
                android:layout_marginTop="@dimen/dimen_10"
                android:id="@+id/evaluation_formTitleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space20dp"
                android:layout_marginRight="@dimen/space20dp"
                android:background="@color/colorTitleBackground"
                android:gravity="center_horizontal"
                android:text="@string/module_Evaluation"
                android:textColor="@color/colorTitleText"
                android:textSize="@dimen/textSize22"
                android:textStyle="bold" />
           <!-- android:textColor="@color/colorScreenBackGroundDark"-->

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
    android:id="@+id/header_relativeLayout"
    android:layout_below="@+id/topRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:orientation="horizontal">

    <TextView
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/basline_shg_name"/>

    <TextView
        android:id="@+id/evForm_ShgNameTv"
        android:layout_weight="0.5"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/dimen_5"
        android:gravity="right"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Savitra Self Help Group"/>

</LinearLayout>

    <LinearLayout
        android:id="@+id/header2_linearlayout"
        android:layout_below="@+id/header_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:visibility="visible"
        android:orientation="vertical">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/basline_totalMember"/>

            <TextView
                android:id="@+id/evform_totalMemberTv"
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_height="wrap_content"
                android:text="10"/>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/basline_entred_member"/>

            <TextView
                android:id="@+id/evForm_enteredMemberTv"
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="10"/>

        </LinearLayout>
    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/evaluation_QuestionRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header2_linearlayout"
        android:layout_marginTop="@dimen/dimen_10"
        android:padding="@dimen/space5dp"
        android:layout_above="@+id/bottomLayout"/>

    <RelativeLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


     <!--   <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:id="@+id/button_save"
            android:text="@string/save"
            android:textSize="@dimen/dimen_15"
            style="@style/IconTextContainedButton"
            />-->
            <Button
                android:layout_width="@dimen/dimen_150"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_2"
                android:id="@+id/button_save"
                android:textColor="@color/white"
                android:background="@drawable/round_shape_dashboard"
                android:text="@string/save"
                android:layout_centerInParent="true"
                android:textSize="@dimen/dimen_15" />

    </RelativeLayout>
</RelativeLayout>