<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightHighlight"
    android:orientation="vertical"
    tools:context=".presenter.Activities.MpinActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:background="@color/colorScreenBackGround"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/topSetLinearLayout"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create 4 Digit Mpin"
            android:textColor="@color/colorTextBlack"
            android:layout_margin="@dimen/dimen_10"/>

        <com.alimuzaffar.lib.pin.PinEntryEditText
            android:id="@+id/txt_pin_entry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10"
            android:background="@null"
            android:cursorVisible="false"
            android:digits="1234567890"
            android:inputType="number"
            android:maxLength="4"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:visibility="visible"
            app:pinLineColors="@color/colorBoxDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_mpin"
            android:textColor="@color/colorTextBlack"
            android:layout_margin="@dimen/dimen_10"/>

        <com.alimuzaffar.lib.pin.PinEntryEditText
            android:id="@+id/txt_pin_entry_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10"
            android:background="@null"
            android:cursorVisible="false"
            android:digits="1234567890"
            android:inputType="number"
            android:maxLength="4"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:visibility="visible"
            app:pinLineColors="@color/colorBoxDark" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10"
        android:background="@color/colorScreenBackGround"
        android:id="@+id/verifieLinerLayout"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_mpin"
            android:gravity="center_horizontal"
            android:textSize="@dimen/textSize18"
            android:textColor="@color/colorTextBlack"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dimen_30"/>

        <com.alimuzaffar.lib.pin.PinEntryEditText
            android:id="@+id/tvEnterMpin"
            android:layout_width="136dp"
            android:layout_height="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:background="@null"
            android:cursorVisible="false"
            android:digits="1234567890"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@android:color/transparent"
            android:textIsSelectable="false"
            android:textSize="0px"
            android:visibility="visible"
            app:pinBackgroundDrawable="@drawable/bg_pin_round"
            app:pinBackgroundIsSquare="true"
            app:pinCharacterSpacing="8dp"
            app:pinLineColors="@color/colorBoxDark"
            app:pinTextBottomPadding="4dp" />
        <TextView
            android:layout_marginTop="@dimen/dimen_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forgotpin"
            android:textStyle="italic"
            android:gravity="center_horizontal"
            android:textColor="@color/colorTextBlack"
            android:id="@+id/fgt_pin"
            />
    </LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_2"
        android:background="@drawable/round_shape_dashboard"
        android:text="@string/Proceed"
        android:textSize="@dimen/dimen_20"

        android:textColor="@color/colorTextButton"
        android:layout_marginTop="@dimen/dimen_30"
        android:id="@+id/btnMpinProceed"/>


</LinearLayout>