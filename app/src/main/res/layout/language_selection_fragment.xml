<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorScreenBackGround"
    android:layout_height="match_parent">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_10"
        android:text="@string/app_name"
        android:textColor="@color/colorAppName"
        android:textSize="@dimen/dimen_20" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space20dp"
        android:layout_marginRight="@dimen/space20dp"
        android:background="@color/colorTitleBackground"
        android:gravity="center_horizontal"
        android:text="@string/languge_change"
        android:textColor="@color/colorTitleText"
        android:textSize="@dimen/textSize18"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/changLanguage_Rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_30"
        android:layout_marginRight="@dimen/space10dp"
        android:layout_marginLeft="@dimen/space10dp"/>


</LinearLayout>