<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colourToolBarScreenLight</item>
        <item name="colorPrimaryDark">@color/colorScreenBackGroundDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/colourToolBarScreenLight</item>
    </style>

    <style name="AppTheme.notActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="toolbarTheme" parent="@style/AppTheme">
        <item name="actionMenuTextColor">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="overlapAnchor">false</item>
        <item name="textAllCaps">false</item>

    </style>

    <style name="common_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:filterTouchesWhenObscured">true</item>
    </style>

    <style name="tv_common_style" parent="common_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="tv_style" parent="@style/tv_common_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/textSize4</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorScreenBackGroundDark</item>
        <item name="colorPrimaryDark">@color/colourToolBarScreenLight</item>
        <item name="colorAccent">@color/colorScreenBackGroundDark</item>
    </style>

    <style name="TextViewCommonTheam" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/textSize20</item>
        <item name="android:gravity">center</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MaterialComponents.Body1</item>

    </style>

    <style name="NormalTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MaterialComponents.Body1</item>

    </style>
//button style
    <style name="ButtonTheam" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:background">@color/colorButtonBackground</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_height">wrap_content</item>

    </style>



    <style name="TextButtonButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorButtonBackground</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="IconTextButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textColor">@color/colorButtonBackground</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/colorButtonBackground</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="IconTextContainedButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/colorWhite</item>
        <item name="android:background">@color/colorButtonBackground</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="OutlineTextButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorButtonBackground</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="strokeColor">@color/colorButtonBackground</item>
    </style>

    <style name="OutlineIconTextButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:textColor">@color/colorButtonBackground</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/colorButtonBackground</item>
        <item name="strokeColor">@color/colorButtonBackground</item>
    </style>

</resources>
